<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cn.wyl.welfarecenter.fragments.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ff4e20"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_message"
            android:gravity="center"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/message"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/user"
            android:background="#f30"/>

        <LinearLayout
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">


            <ImageView
                android:id="@+id/img_per_user_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/userpic"/>

            <TextView
                android:id="@+id/tv_per_usernick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="未登录"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/qr"

                />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f36838"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏的宝贝"
                android:textColor="#fff"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏的店铺"
                android:textColor="#fff"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的足迹"
                android:textColor="#fff"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@color/bottom_bar_taobao_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@color/bottom_bar_taobao_bg"
            android:gravity="center_vertical"
            android:text="我的订单"
            android:textColor="#000"
            android:textSize="18sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawableRight="@drawable/arrow_right"
            android:text="查看全部订单"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/list_background">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@drawable/wait_pay"
            android:paddingTop="3dp"
            android:text="待付款"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@drawable/wait_diver"
            android:paddingTop="3dp"
            android:text="待发货"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@drawable/wait_recive"
            android:paddingTop="3dp"
            android:text="待收货"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@drawable/wait_flower"
            android:paddingTop="3dp"
            android:text="待评价"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:drawableTop="@drawable/wait_service"
            android:paddingTop="3dp"
            android:text="退款/售后"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/list_background"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="我的卡券包"
        android:textColor="#000"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@color/list_background"
        android:drawableLeft="@drawable/center_card_coupon1"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="生活券"
        android:textColor="#000"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@color/list_background"
        android:drawableLeft="@drawable/center_card_coupon2"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="网店券"
        android:textColor="#000"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@color/list_background"
        android:drawableLeft="@drawable/center_card_coupon3"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/arrow_right"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="会员卡"
        android:textColor="#000"
        android:textSize="17sp"/>
</LinearLayout>
