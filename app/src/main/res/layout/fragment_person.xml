<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="cn.wyl.welfarecenter.fragments.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#ff4e20"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_message"
            android:gravity="center"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/message"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/user"
            android:background="#f30"/>

        <LinearLayout
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">


            <ImageView

                android:id="@+id/img_per_user_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/userpic"/>

            <TextView
                android:id="@+id/tv_per_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="未登录"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/qr"

                />
        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f36838"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏的宝贝"
                android:textColor="#fff"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="收藏的店铺"
                android:textColor="#fff"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#fff"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我的足迹"
                android:textColor="#fff"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@color/bottom_bar_taobao_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:background="@color/bottom_bar_taobao_bg"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:textSize="18sp"
            android:text="我的订单"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Button
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableRight="@drawable/arrow_right"
            android:layout_marginRight="10dp"
            android:text="查看全部订单"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@color/list_background"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button android:paddingTop="3dp"
           android:layout_weight="1"
            android:background="@color/list_background"
            android:layout_width="wrap_content"
            android:drawableTop="@drawable/wait_pay"
            android:text="待付款"
            android:layout_height="match_parent"/>
        <Button android:paddingTop="3dp"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:layout_width="wrap_content"
            android:drawableTop="@drawable/wait_diver"
            android:text="待发货"
            android:layout_height="match_parent"/>
        <Button android:paddingTop="3dp"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:layout_width="wrap_content"
            android:drawableTop="@drawable/wait_recive"
            android:text="待收货"
            android:layout_height="match_parent"/>
        <Button
            android:paddingTop="3dp"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:layout_width="wrap_content"
            android:drawableTop="@drawable/wait_flower"
            android:text="待评价"
            android:layout_height="match_parent"/>
        <Button android:paddingTop="3dp"
            android:layout_weight="1"
            android:background="@color/list_background"
            android:layout_width="wrap_content"
            android:drawableTop="@drawable/wait_service"
            android:text="退款/售后"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
