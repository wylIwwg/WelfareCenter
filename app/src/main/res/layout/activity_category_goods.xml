<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:background="#f96"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <cn.wyl.welfarecenter.views.CatChildFilterButton
            android:textSize="20sp"
            android:id="@+id/btnCatChildFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/arrow2_up"
            android:background="@null"
            android:textColor="@color/white"
            android:text="分类"/>

    </RelativeLayout>
    <LinearLayout
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_price"
            android:textSize="18sp"
            android:text="价格"
            android:drawableRight="@drawable/arrow_order_down"
            android:background="@color/orange"
            android:layout_width="1dp" android:layout_weight="1"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_time"
            android:text="时间"
            android:textSize="18sp"
            android:background="@color/orange"
            android:drawableRight="@drawable/arrow_order_down"
            android:layout_width="1dp" android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <include layout="@layout/fragment_new_goods"></include>
</LinearLayout>
