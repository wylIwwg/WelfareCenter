<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#fff"
    >

    <ImageView
        android:id="@+id/img_cart_goods"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/list_background"
        android:scaleType="fitCenter"
        android:src="@drawable/nopic"/>

    <LinearLayout
        android:id="@+id/lay_info"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/img_cart_goods"
        android:background="@color/list_background"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cart_goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:text="样品样品"
            android:textSize="18sp"/>

        <TextView

            android:id="@+id/tv_cart_goodsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"

            android:text="1"
            android:textSize="18sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_cart_goodsPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/lay_info"
        android:background="@color/list_background"
        android:gravity="center"
        android:text="100"
        android:textSize="18sp"/>
</RelativeLayout>